<?xml version="1.0" encoding="UTF-8"?>

<Configuration >
    <Appenders>
        <RollingRandomAccessFile name="RollingRandomAccessFile" fileName="app.log"
                                 filePattern="%d{MM-dd-yyyy}-%i.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>


    <Loggers>
        <AsyncLogger name="com.h2t.study" level="debug" additivity="false">
            <AppenderRef ref="RollingRandomAccessFile"/>
        </AsyncLogger>

        <Root level="info">
            <AppenderRef ref="RollingRandomAccessFile"/>
        </Root>
    </Loggers>
</Configuration>
