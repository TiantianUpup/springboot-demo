<?xml version="1.0" encoding="UTF-8"?>

<Configuration >
    <properties>
        <property name="FILE_PATH">C://Users//hetiantian//Desktop//springboot-log</property>
    </properties>

    <Appenders>
        <RollingRandomAccessFile name="RollingRandomAccessFile" filePattern="${FILE_PATH}//%d.log">
            <PatternLayout>
                <Pattern>%d [%t] %-5p [%c] - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="RollingRandomAccessFile2" fileName="${FILE_PATH}//info.log"
                                 filePattern="%d{MM-dd-yyyy}-%i.log">
            <PatternLayout>
                <Pattern>%d [%t] %-5p [%c] - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <!--<Filters>-->
            <!--<ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL" />-->
            <!--<ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY" />-->


            <!--&lt;!&ndash;<ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="NEUTRAL" />&ndash;&gt;-->
            <!--&lt;!&ndash;<ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL" />&ndash;&gt;-->
            <!--&lt;!&ndash;<ThresholdFilter level="error" onMatch="DENY"  />&ndash;&gt;-->
            <!--</Filters>-->

            <Filters>
                <!--<ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>-->
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingRandomAccessFile>
    </Appenders>


    <Loggers>
        <!-- additivity="false"表示不输出到控制台 -->
        <AsyncLogger name="com.h2t.study" additivity="false">
            <AppenderRef ref="RollingRandomAccessFile"/>
            <AppenderRef ref="RollingRandomAccessFile2" level="info"/>
        </AsyncLogger>

        <!--<Root level="info">-->
        <!--<AppenderRef ref="RollingRandomAccessFile"/>-->
        <!--<AppenderRef ref="RollingRandomAccessFile2"/>-->
        <!--</Root>-->
    </Loggers>
</Configuration>
